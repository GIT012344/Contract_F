# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=contract_manager
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=8h

# Server Configuration
PORT=3001
NODE_ENV=development

# LDAP Configuration
LDAP_URL=ldap://your-ldap-server:389
LDAP_USER_DN=ou=users,dc=company,dc=com
LDAP_SEARCH_BASE=ou=users,dc=company,dc=com
LDAP_USERNAME_ATTR=uid
LDAP_ADMIN_DN=cn=admin,dc=company,dc=com
LDAP_ADMIN_PASSWORD=admin_password

# LDAP SSL Configuration (Optional)
# LDAP_URL=ldaps://your-ldap-server:636
# LDAP_TLS_CERT_PATH=/path/to/cert.pem
# LDAP_TLS_KEY_PATH=/path/to/key.pem
# LDAP_TLS_CA_PATH=/path/to/ca.pem

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@yourcompany.com
